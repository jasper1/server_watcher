import os
from ConfigParser import ConfigParser

config_storage = {}
stored_path = None

class ConfigLoader(object):
    def __init__(self, path=None):
        folder = os.listdir(path)
        for c in folder:
            if c.endswith('.conf'):
                print ("Loading %s" % c)
                config = ConfigParser()
                config.read(os.path.join(path,c))
                config_storage[c] = config

def loader(path="."):
    confs = os.listdir(path)
    for c in confs:
        if c.endswith('.conf'):
            print ("Loading %s" % c)
            config = ConfigParser()
            config.read(os.path.join(path,c))
            config_storage[c] = config