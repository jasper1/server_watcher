class Controller(object):
    '''
    Controller prototype class
    '''
    errors = []
    ret_data = []
    
    def __init__(self, params):
        self.params = params

    def set_error(self, error):
        self.errors.append(error) 

    @property
    def data(self):
        if self.errors:
            return self.errors
        else:
            return self.ret_data
        