import __main__
import os

from ConfigParser import ConfigParser

from modules.i_controller import Controller

class Auth(Controller):
    '''
    Auth responser
    '''
    
    CONFIG_FILE = os.path.join(os.path.dirname(__main__.__file__),'auth.conf')
    good_ips = []
    bad_ips  = []
    
    def __init__(self,params):
        super(Auth, self).__init__(params)
        if not os.path.exists(self.CONFIG_FILE):
            self.set_error('Auth.conf file does not exists.')
            self.set_error(self.CONFIG_FILE)
            self.done()
        
        config = ConfigParser()
        config.read(self.CONFIG_FILE)
        print config._sections.