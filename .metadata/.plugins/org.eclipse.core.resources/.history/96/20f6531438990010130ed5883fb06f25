import os
from ConfigParser import ConfigParser

config_storage = {}
stored_path = None

def loader(path):
    confs = os.listdir(path)
    for c in confs:
        if c.endswith('.conf'):
            print ("Loading %s" % c)
            config = ConfigParser()
            config.read(os.path.join(path,c))
            config_storage[c] = config