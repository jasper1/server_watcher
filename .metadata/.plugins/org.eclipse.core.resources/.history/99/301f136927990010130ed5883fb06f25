import sys, os
import cherrypy

from help import startup_help

def _main_(argv):
    # Show startup help
    startup_help()
    
    # Check configure file in ARGV dict
    conf_file = "server.conf"
    if len(argv) > 1:
        conf_file = argv[0]
        
    conf = os.path.join(os.path.dirname(__file__), conf_file)
    cherrypy.quickstart(HelloWorld(), config=conf)

if __name__ == '__main__':
    _main_(sys.argv)